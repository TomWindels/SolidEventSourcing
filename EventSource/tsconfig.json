{
    "compilerOptions": {
        "declaration": true,
        "target": "es2015",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "./dist",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
    ]
}
